<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/noteItemLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        app:cardCornerRadius="13dp"
        app:cardElevation="5dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/noteItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:padding="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/google_sans_medium"
                android:text="This is a title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/noteItemContentItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/noteItemTitle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/google_sans_medium"
                android:maxLines="12"
                android:padding="15dp"
                android:text="@string/simple_text"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/noteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noteItemContentItem"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:padding="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/google_sans_regular"
                android:drawableStart="@drawable/ic_outline_calendar_today_24"
                android:drawablePadding="6dp"
                android:text="dd-mm-yy"
                android:drawableTint="@color/black"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:textAlignment="textStart"/>



        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>